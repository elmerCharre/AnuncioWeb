@model Ads.Common.ViewModels.AdvertisingViewModel

@{
    ViewBag.Title = "Detalle del Anuncio";
}

<h2>@ViewBag.Title</h2>

<div>
    @*<h4>Detalle del Anuncio</h4>*@
    <hr />
    <div id="carousel">
        @foreach (var item in Model.resource)
        {
            <img src="@Url.Content("/resources/resource_" + item.advertising_id + "/" + item.path)" style="max-width: 550px;" />
        }
    </div>
    <br>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.category_id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.category_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.subtype_id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.subtype_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.detail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.detail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <br>
        @foreach (var item in Model.values)
        {
            <dt>
                @Html.DisplayFor(model => item.field_label)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.value)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    @Scripts.Render("~/bundles/democarousel")

    <script type="text/javascript" lang="javascript">
        $(function () {
            $('#carousel').carouFredSel({
                auto: true,
                direction: "up",
                scroll: {
                    items: 1,
                    easing: "elastic",
                    duration: 1000,
                    pauseOnHover: true
                }
            });
        });
    </script>
}
